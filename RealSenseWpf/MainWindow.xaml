<Window x:Class="RealSenseWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealSenseWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ColorImage" Grid.Column="2" MouseDown="ColorImage_MouseDown"/>
        <Image x:Name="DepthImage" MouseDown="ColorImage_MouseDown"/>
        <TextBlock x:Name="InfoTextBlock" Grid.ColumnSpan="2" Width="200" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Background="Black" Foreground="White" Text="Click image to check distance"/>
    </Grid>
</Window>
